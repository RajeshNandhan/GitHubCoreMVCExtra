@model Core.Library.ArivuTharavuThalam.Person

<h4>Person</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-sm-4">
                    <label asp-for="Id" class="control-label"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="Id" readonly="readonly"  class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4">
                    <label asp-for="personId" class="control-label"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="personId" readonly="readonly"  class="form-control" />
                    <span asp-validation-for="personId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4">
                    <label asp-for="firstName" class="control-label"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="firstName" readonly="readonly"  class="form-control" />
                    <span asp-validation-for="firstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4">
                    <label asp-for="lastName" class="control-label"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="lastName" class="form-control" />
                    <span asp-validation-for="lastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4">
                    <label asp-for="rank" class="control-label"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="rank" class="form-control" />
                    <span asp-validation-for="rank" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4">
                    <label asp-for="category" class="control-label"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="category" class="form-control" />
                    <span asp-validation-for="category" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4">
                    <label asp-for="dateOfBirth" class="control-label"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="dateOfBirth" class="form-control" />
                    <span asp-validation-for="dateOfBirth" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isPlayCricket" /> @Html.DisplayNameFor(model => model.isPlayCricket)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="nav-link text-dark" asp-area="" asp-controller="Person" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
